<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Background Hijau-->
    <View
        android:background="@drawable/bg_hijau"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!--Header Search Bar-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_konten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hijau_tokped"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--Searchbar-->
        <SearchView
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_margin="14dp"
            android:background="@drawable/hire_round"
            android:iconifiedByDefault="false"
            android:queryHint="Cari Apa?"
            app:layout_constraintBottom_toBottomOf="@id/header_konten"
            app:layout_constraintEnd_toStartOf="@id/inbox"
            app:layout_constraintStart_toStartOf="@id/header_konten"
            app:layout_constraintTop_toTopOf="@id/header_konten" />

        <!--Btn inbox-->
        <ImageButton
            android:id="@+id/inbox"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/transparant"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/inbox"
            app:layout_constraintBottom_toBottomOf="@id/search_bar"
            app:layout_constraintEnd_toStartOf="@id/notif"
            app:layout_constraintStart_toEndOf="@id/search_bar"
            app:layout_constraintTop_toTopOf="@id/search_bar" />

        <!--Notifikasi merah-->
        <ImageButton
            android:layout_width="22dp"
            android:layout_height="18dp"
            android:layout_marginStart="-16dp"
            android:background="@color/transparant"
            android:scaleType="fitCenter"
            android:src="@drawable/notification"
            app:layout_constraintStart_toEndOf="@id/inbox"
            app:layout_constraintTop_toTopOf="@id/inbox" />



        <!--Btn Notif-->
        <ImageButton
            android:id="@+id/notif"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/transparant"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_notif"
            app:layout_constraintBottom_toBottomOf="@id/inbox"
            app:layout_constraintEnd_toStartOf="@id/cart"
            app:layout_constraintStart_toEndOf="@id/inbox"
            app:layout_constraintTop_toTopOf="@id/inbox" />

        <!--Btn Cart-->
        <ImageButton
            android:id="@+id/cart"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/transparant"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cart"
            app:layout_constraintBottom_toBottomOf="@id/notif"
            app:layout_constraintEnd_toStartOf="@id/burger_menu"
            app:layout_constraintStart_toEndOf="@id/notif"
            app:layout_constraintTop_toTopOf="@id/notif" />

        <!--Btn Burgermenu-->
        <ImageButton
            android:id="@+id/burger_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/transparant"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/burger"
            android:layout_marginRight="14dp"
            app:layout_constraintBottom_toBottomOf="@id/cart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cart"
            app:layout_constraintTop_toTopOf="@id/cart" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--Scroll view-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header_konten"
        app:layout_constraintStart_toStartOf="parent">

          <androidx.constraintlayout.widget.ConstraintLayout
              android:id="@+id/fitur"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <!--Icon Lokasi-->
              <ImageButton
                  android:id="@+id/ic_location"
                  android:layout_width="20dp"
                  android:layout_height="18dp"
                  android:layout_marginLeft="14dp"
                  android:background="@color/transparant"
                  android:scaleType="fitCenter"
                  android:src="@drawable/location"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent" />

              <!--Alamat-->
              <TextView
                  android:id="@+id/alamat"
                  android:text="@string/alamat"
                  android:textSize="@dimen/font_size_menu"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/white"
                  app:layout_constraintStart_toEndOf="@id/ic_location"
                  app:layout_constraintTop_toTopOf="@id/ic_location"
                  app:layout_constraintBottom_toBottomOf="@id/ic_location"/>

              <!--Dropdown-->
              <ImageButton
                  android:id="@+id/id_extend"
                  android:layout_width="20dp"
                  android:layout_height="18dp"
                  android:background="@color/transparant"
                  android:scaleType="fitCenter"
                  android:src="@drawable/dropdown"
                  app:layout_constraintStart_toEndOf="@id/alamat"
                  app:layout_constraintTop_toTopOf="parent" />


              <!--Member Area-->
              <androidx.constraintlayout.widget.ConstraintLayout
                  android:id="@+id/section_member"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/hire_round"
                  android:layout_margin="14dp"
                  android:elevation="5dp"
                  android:paddingRight="10dp"
                  android:paddingLeft="10dp"
                  android:foregroundGravity="center"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/ic_location">

                  <ImageButton
                      android:id="@+id/ic_gopay"
                      android:layout_width="32dp"
                      android:layout_height="32dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginBottom="10dp"
                      android:background="@color/transparant"
                      android:scaleType="fitCenter"
                      android:src="@drawable/gopay"
                      app:layout_constraintBottom_toBottomOf="@id/section_member"
                      app:layout_constraintEnd_toStartOf="@id/nominal"
                      app:layout_constraintStart_toStartOf="@id/section_member"
                      app:layout_constraintTop_toTopOf="@id/section_member" />

                  <TextView
                      android:id="@+id/nominal"
                      android:text="Rp10.000"
                      android:textSize="@dimen/font_size_menu"
                      android:textStyle="bold"
                      android:layout_width="86dp"
                      android:layout_height="wrap_content"
                      app:layout_constraintStart_toEndOf="@id/ic_gopay"
                      app:layout_constraintTop_toTopOf="@id/ic_gopay"/>

                  <TextView
                      android:id="@+id/coints"
                      android:text="39.004 Coints"
                      android:textSize="@dimen/font_size_menu"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      app:layout_constraintTop_toBottomOf="@id/nominal"
                      app:layout_constraintStart_toStartOf="@id/nominal"
                      app:layout_constraintBottom_toBottomOf="@id/ic_gopay"/>

                  <ImageButton
                      android:id="@+id/ic_member"
                      android:layout_width="32dp"
                      android:layout_height="32dp"
                      android:layout_marginLeft="14dp"
                      android:background="@color/transparant"
                      android:scaleType="fitCenter"
                      android:src="@drawable/member"
                      app:layout_constraintStart_toEndOf="@id/nominal"
                      app:layout_constraintTop_toTopOf="@id/section_member"
                      app:layout_constraintBottom_toBottomOf="@id/section_member"
                      app:layout_constraintEnd_toStartOf="@id/status_member"/>

                  <TextView
                      android:id="@+id/status_member"
                      android:layout_width="98dp"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/font_size_menu"
                      android:text="Member Silver"
                      android:textStyle="bold"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toEndOf="@id/ic_member"
                      app:layout_constraintTop_toTopOf="@id/ic_member" />

                  <TextView
                      android:id="@+id/kupon_member"
                      android:layout_width="98dp"
                      android:layout_height="wrap_content"
                      android:text="19 Kupon Baru"
                      android:textSize="@dimen/font_size_menu"
                      app:layout_constraintStart_toStartOf="@id/status_member"
                      app:layout_constraintTop_toBottomOf="@id/status_member"
                      app:layout_constraintBottom_toBottomOf="@id/ic_member"/>

              </androidx.constraintlayout.widget.ConstraintLayout>

              <!--Menu List-->
              <androidx.constraintlayout.widget.ConstraintLayout
                  android:id="@+id/list_menu_baris_satu"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_margin="14dp"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/section_member">

                  <ImageView
                      android:id="@+id/ic_official_store"
                      android:src="@drawable/official_store"
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                      android:layout_marginRight="14dp"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintEnd_toStartOf="@id/ic_lihat_semua"/>

                  <TextView
                      android:id="@+id/desc_official_store"
                      android:text="Official Store"
                      android:textSize="@dimen/font_size_menu"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      app:layout_constraintStart_toStartOf="@id/ic_official_store"
                      app:layout_constraintTop_toBottomOf="@id/ic_official_store"
                      app:layout_constraintEnd_toEndOf="@id/ic_official_store"/>

                  <ImageView
                      android:id="@+id/ic_lihat_semua"
                      android:src="@drawable/lihat_semua"
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                      android:layout_marginRight="14dp"
                      app:layout_constraintStart_toEndOf="@id/ic_official_store"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintEnd_toStartOf="@id/ic_kebutuhan_harian"/>

                  <TextView
                      android:id="@+id/desc_lihat_semua"
                      android:text="Lihat Semua"
                      android:textSize="@dimen/font_size_menu"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      app:layout_constraintStart_toStartOf="@id/ic_lihat_semua"
                      app:layout_constraintTop_toBottomOf="@id/ic_lihat_semua"
                      app:layout_constraintEnd_toEndOf="@id/ic_lihat_semua"
                      />


                  <ImageView
                      android:id="@+id/ic_kebutuhan_harian"
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                      android:layout_marginRight="14dp"
                      android:src="@drawable/kebutuhan_harian"
                      app:layout_constraintStart_toEndOf="@id/ic_lihat_semua"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintEnd_toStartOf="@id/ic_eletronik"/>

                  <TextView
                      android:id="@+id/desc_kebutuhan_harian"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="@string/kebutuhan_harian"
                      android:textSize="@dimen/font_size_menu"
                      app:layout_constraintEnd_toEndOf="@id/ic_kebutuhan_harian"
                      app:layout_constraintStart_toStartOf="@id/ic_kebutuhan_harian"
                      app:layout_constraintTop_toBottomOf="@id/ic_kebutuhan_harian" />

                  <ImageView
                      android:id="@+id/ic_eletronik"
                      android:src="@drawable/elektronik"
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                      android:layout_marginRight="14dp"
                      app:layout_constraintStart_toEndOf="@id/ic_kebutuhan_harian"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintEnd_toStartOf="@id/ic_top_up"/>

                  <TextView
                      android:id="@+id/desc_elektonik"
                      android:text="Elektronik"
                      android:textSize="@dimen/font_size_menu"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      app:layout_constraintStart_toStartOf="@id/ic_eletronik"
                      app:layout_constraintTop_toBottomOf="@id/ic_eletronik"
                      app:layout_constraintEnd_toEndOf="@id/ic_eletronik"
                      />

                  <ImageView
                      android:id="@+id/ic_top_up"
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                      android:src="@drawable/topup"
                      app:layout_constraintStart_toEndOf="@id/ic_eletronik"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"/>

                  <TextView
                      android:id="@+id/desc_top_up"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/font_size_menu"
                      android:gravity="center"
                      android:text="@string/top_up_tagihan"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toEndOf="@id/ic_top_up"
                      app:layout_constraintStart_toStartOf="@id/ic_top_up"
                      app:layout_constraintTop_toBottomOf="@id/ic_top_up" />

              </androidx.constraintlayout.widget.ConstraintLayout>

              <HorizontalScrollView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="14dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintHorizontal_bias="0.0"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/list_menu_baris_satu">

                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent">

                      <ImageButton
                          android:id="@+id/iklan1"
                          android:layout_width="wrap_content"
                          android:layout_height="100dp"
                          android:layout_marginLeft="14dp"

                          android:adjustViewBounds="true"
                          android:background="@color/transparant"
                          android:scaleType="fitStart"
                          android:src="@drawable/iklan_banner_satu"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toTopOf="parent" />

                      <ImageButton
                          android:id="@+id/iklan2"
                          android:layout_width="wrap_content"
                          android:layout_height="100dp"
                          android:adjustViewBounds="true"
                          android:layout_marginStart="14dp"
                          android:layout_marginEnd="14dp"
                          android:background="@color/transparant"
                          android:scaleType="fitStart"
                          android:src="@drawable/iklan_banner_dua"
                          app:layout_constraintStart_toEndOf="@id/iklan1"
                          app:layout_constraintTop_toTopOf="parent" />


                  </androidx.constraintlayout.widget.ConstraintLayout>


              </HorizontalScrollView>


          </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>